<table class="table table-bordered border-primary table-hover" style="text-align: center;">
  <thead class="table-primary ">
    <th>ID</th>
    <th>PW</th>
    <th>이름</th>
    <th>주소</th>
    <th>전화번호</th>
    <th>생일</th>
    <th>클래스</th>
    <th>등급</th>
    <th colspan="2" >메뉴</th>
  </thead> 

  <% for (i = 0; i < person.length; i ++) { %> 
   <tr>
      <td><%= person[i].loginid %></td>
      <td><%= person[i].password %></td>
      <td><%= person[i].name %></td>
      <td><%= person[i].address %></td>
      <td><%= person[i].tel %></td>
      <td><%= person[i].birth %></td>
      
      <% 
        var class_name = '';
        if (person[i].class === 'CST') {
            class_name = "고객";
        } else if (person[i].class === 'CEO') {
            class_name = "경영자";
        } else if (person[i].class === 'MNG') {
            class_name = "관리자";
        }
      %>

      <td><%= person[i].class %>(<%=class_name%>)</td>
      <td><%= person[i].grade %></td>

      <td><a href="/person/update/<%= person[i].loginid %>" style="text-decoration: none;">수정</a></td>
      <td><a href="/person/delete/<%= person[i].loginid %>" onclick='if(confirm("정말로 삭제하시겠습니까?")==false){return false}' style="text-decoration: none;">삭제</a></td>
  </tr>
  
  <% } %>

</table>
    <% if (person.length == 0) { %> 
      <p>회원이 없으니 고객 추가 버튼으로 고객을 추가해 주십시오. </p>
    <% } %>
    
