
    <table class="table table-bordered" style="width: 100%; text-align: left;">
        <tr>
            <td rowspan="5" style="width: 300px; padding-right: 500px; vertical-align: top;">
                <img src="/<%= products[0].image %>" style="width: 300px; height: 300px;">
            </td>
            <td><%= products[0].name %></td>
        </tr>
        <tr>
            <td>가격 : <%= products[0].price.toLocaleString('ko-KR') %> 원</td>
        </tr>
        <tr>
            <td>브랜드 : <%= products[0].brand %></td>
        </tr>
        <tr>
            <form action="/purchase/submit" method="POST">
            <td>수량 : 
                <input type="number" name="qty" value="" min="1" style="width: 200px;" required>
            </td>
        </tr>
        <tr>
            <td style="text-align: left;">
                <button class="btn btn-outline-primary btn-sm" type="submit" style="margin-right: 10px; display: inline;">결제</button>

                <input type="hidden" name="mer_id" value="<%= products[0].mer_id %>">
                <input type="hidden" name="price" value="<%= products[0].price %>">
                <input type="hidden" name="loginid" value="<%= loginid %>">
            </form>
                <form action="/purchase/cart/submit" method="post" style="display: inline-block">
                    <input type="hidden" name="mer_id" value="<%= products[0].mer_id %>">
                    <input type="hidden" name="price" value="<%= products[0].price %>">
                    <input type="hidden" name="loginid" value="<%= loginid %>">
                    <button class="btn btn-outline-primary btn-sm" type="submit">장바구니</button>
                </form>
            </td>
        </tr>
    </table>

